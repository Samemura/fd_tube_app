<div class="session-container row">
  <div class="col-md-6 session-inner border">
    <div class="text-center p-5">
      <h4 class="h3 mb-3">アカウントを編集する</h4>
      <div class="">
        <%= form_with model: @user, local: true do |user| %>
        <div class="form-group pb-3">
          <%= user.label :user_name, "ユーザー名" %>
          <%= user.text_field :user_name, class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= user.label :first_name, "苗字" %>
          <%= user.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= user.label :password, "パスワード" %>
          <%= user.text_field :password , class: "form-control" %>
        </div>
      </div>
      <div class="form-actions">
        <%= user.submit "更新する", class: 'btn btn-outline-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
