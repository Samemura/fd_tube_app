<div class="session-container row">
  <div class="col-md-5">
    <div class="session-inner border">
      <h2 class="session-title">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-box-width" %>
      </div>
      <div class="form-field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-box-width" %>
      </div>
      <div class="session-bottom">
        <div class="form-actions">
          <%= f.submit "ログイン", class: 'btn btn-outline-secondary' %>
        </div>
        <div class="form-link">
          <%= link_to "ゲストユーザーでログイン", method: :post %><br/>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%#= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br/>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
