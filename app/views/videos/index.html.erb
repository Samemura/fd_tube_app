<div class="container">
  <h3>動画一覧</h3>
  <div class="row">
    <% @s3files.each do |s3file| %>
    <div class="col-md-4 border p-3">
      <%= link_to "/videos/#{s3file.id}", controller: "show" do %>
        <div class="thumbnail_inner">
          <%= image_tag "https://saigai-share-encode-videos.s3.ap-northeast-1.amazonaws.com/thumbnail/#{s3file.file_name.split(".").first}_pic.0000000.jpg", class: "img-fluid" %>
          <div class="h5"><%= s3file.video.title %></div>
          <div class="video_container">
            <p>説明：<%= s3file.video.description %></p>
            <p>備考：<%= s3file.video.remarks %></p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
