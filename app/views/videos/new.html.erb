<div class="container">
  <form class="text-center p-5 y-5">
    <h1 class="h3 mb-3">新規投稿画面</h1>
    <div class="container">
      <%= form_with model: @video do |f| %>
        <div class="form-group pb-3">
          <%= f.label :title, "動画のタイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= f.label :description, "動画の説明" %>
          <%= f.text_area :description , class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= f.label :text, "備考欄" %>
          <%= f.text_area :text , class: "form-control" %>
        </div>
        <%= f.submit "登 録", class: 'btn btn-primary px-3 py-2 rounded' %>
      <% end %>
    </div>
  </form>
</div>
