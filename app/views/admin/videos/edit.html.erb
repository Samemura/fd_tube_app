<div class="session-container row">
  <div class="col-md-6 session-inner border">
    <div class="text-center p-5">
      <h4 class="h3 mb-3">動画を編集する</h4>
      <div class="">
        <div class="thumbnail-innner">
          <%= image_tag "https://#{ENV['AWS_S3_OUTPUT_BUCKET_NAME']}.s3.ap-northeast-1.amazonaws.com/thumbnail/#{@video_name.split(".").first}_pic.0000000.jpg" %>
        </div>
        <%= form_with model: [:admin, @video], local: true do |video| %>
        <div class="form-group pb-3">
          <%= video.label :title, "動画のタイトル" %>
          <%= video.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= video.label :description, "動画の説明" %>
          <%= video.text_area :description , class: "form-control" %>
        </div>
        <div class="form-group pb-3">
          <%= video.label :remarks, "備考欄" %>
          <%= video.text_area :remarks , class: "form-control" %>
        </div>
      </div>
      <div class="form-actions">
        <%= video.submit "更新する", class: 'btn btn-outline-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
