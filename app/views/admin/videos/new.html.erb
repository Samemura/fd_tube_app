<%# ここは今んとこ使わん。s3#newページで一括登録する%>
<% render "shared/video_error", obj: @video %>
<%= form_with model: [:admin, @video], local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-6 border">
      <div class="text-center p-5">
        <h1 class="h3 mb-3">S3file情報を入力する</h1>
        <div class="container">
          <div class="form-group pb-3">
            <div class="form-group">
              <%= f.fields_for :s3file, @video.build_s3file do |s| %>
                <%= s.file_field :key, class: 'form-control'%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 border">
      <div class="text-center p-5">
        <h1 class="h3 mb-3">Video情報を入力する</h1>
        <div class="container">
          <div class="form-group pb-3">
            <%= f.label :title, "動画のタイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group pb-3">
            <%= f.label :description, "動画の説明" %>
            <%= f.text_area :description , class: "form-control" %>
          </div>
          <div class="form-group pb-3">
            <%= f.label :text, "備考欄" %>
            <%= f.text_area :text , class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="btn_inner text-center pt-5">
  <%= f.submit "登 録", class: 'btn btn-outline-secondary px-3 py-2 rounded' %>
</div>
<% end %>
